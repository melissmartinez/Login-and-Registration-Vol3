@{
    ViewData["Title"] = "Home Page";
}
@model User

<a asp-action="Login" asp-controller="Home">Login</a>
<form asp-action="registration" asp-controller="Home" method="post">
    <div class="form-group">
        <span class="text-danger font-weight-bold" asp-validation-for="fname"></span>
        <label asp-for="fname">First Name: </label>
        <input class="form-control" asp-for="fname">
    </div>
    <div class="form-group">
        <span class="text-danger font-weight-bold" asp-validation-for="lname"></span>
        <label asp-for="lname">Last Name: </label>
        <input class="form-control" asp-for="lname">
    </div>
    <div class="form-group">
        <span class="text-danger font-weight-bold" asp-validation-for="email"></span>
        <label asp-for="email"> Email: </label>
        <input class="form-control" asp-for="email">
    </div>
    <div class="form-group">
        <span class="text-danger font-weight-bold" asp-validation-for="password"></span>
        <label asp-for="password">Password: </label>
        <input class="form-control" asp-for="password">
    </div>
    <div class="form-group">
        <span class="text-danger font-weight-bold" asp-validation-for="cpassword"></span>
        <label asp-for="cpassword">Confirm Password: </label>
        <input class="form-control" asp-for="cpassword">
    </div>
    <button class="btn btn-info">Register!</button>
</form>